<Page x:Class="KojVenStatistic.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KojVenStatistic.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Авторизация">

    <Border HorizontalAlignment="Center" VerticalAlignment="Center" CornerRadius="5" BorderBrush="Black" BorderThickness="1" Padding="2" Background="{DynamicResource BackgroundColor}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <TextBlock Text="Авторизация" FontSize="24" Margin="10,5" HorizontalAlignment="Center"/>

            <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="5" HorizontalAlignment="Right">
                <TextBlock Text="Логин" FontSize="20" VerticalAlignment="Center"/>
                <TextBox FontSize="20" Width="150" Margin="5" Name="TBoxLogin" VerticalAlignment="Center"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="5">
                <TextBlock Text="Пароль" FontSize="20" VerticalAlignment="Center"/>
                <PasswordBox FontSize="20" Width="150" Margin="5" Name="PBoxPassword"/>
            </StackPanel>

            <Button Content="Войти" Grid.Row="3" Click="BtnLogin_Click" x:Name="BtnLogin"/>

        </Grid>
    </Border>
</Page>
